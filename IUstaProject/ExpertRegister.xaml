<Window x:Class="IUstaProject.ExpertRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IUstaProject"
        mc:Ignorable="d"
        Title="ExpertRegister" Height="450" Width="800">
    <Grid>
        <StackPanel  Orientation="Vertical" HorizontalAlignment="Center" Height="400" Width="800">
            <TextBox x:Name="ExpertName" Margin="25" Width="200" Height="25">Name</TextBox>
            <TextBox x:Name="ExpertSurName" Width="200" Height="25">SurName</TextBox>
            <TextBox x:Name="ExpertFoto" Margin="-76,25,25,25" Width="100" Height="40">Foto</TextBox>
            <Button x:Name="ExpertFotoPath" Width="50" Height="25" >FotoPath</Button>
            <TextBox x:Name="ExpertEmail" Width="200" Height="25">Email</TextBox>
            <ComboBox x:Name="ExpertWorkAreacom"  Margin="25" Height="25" Width="200"></ComboBox>
            <TextBox x:Name="ExpertWorkArea" Width="200" Height="25">Work Area</TextBox>
        </StackPanel>
    </Grid>
</Window>
